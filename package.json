{
  "name": "companion",
  "private": true,
  "version": "1.255.673.19813",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:test": "vite --mode test",
    "dev:prod": "vite --mode production",
    "dev:server": "cross-env NODE_ENV=development nodemon --env-file=.env.development server/index.js",
    "dev:ton": "nodemon --exec ts-node-esm ton-payment/index.ts",
    "build": "vite build",
    "build:test": "vite build --mode test",
    "build:prod": "vite build --mode production",
    "clean": "rimraf dist node_modules package-lock.json",
    "clean:cache": "npm cache clean --force",
    "clean:full": "npm run clean && npm run clean:cache",
    "preview": "vite preview",
    "preview:test": "vite preview --mode test --port 4173",
    "preview:prod": "vite preview --mode production --host 0.0.0.0 --port 4173",
    "server:test": "cross-env NODE_ENV=test node server/index.js",
    "server:prod": "cross-env NODE_ENV=production nodemon --env-file=.env.production server/index.js",
    "ton:server:test": "cross-env NODE_ENV=test tsx ton-payment/index.ts",
    "ton:server:prod": "cross-env NODE_ENV=production node --experimental-specifier-resolution=node --loader ts-node/esm ton-payment/index.ts",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "update-version": "node scripts/update-version.js",
    "version:major": "node scripts/update-version.js major",
    "version:minor": "node scripts/update-version.js minor",
    "version:patch": "node scripts/update-version.js patch",
    "commit": "scripts/run-commit.bat",
    "characters": "cross-env DEBUG=* tsx src/scripts/characterManager.ts"
  },
  "dependencies": {
    "@firebase/auth": "^1.6.0",
    "@firebase/firestore": "^4.4.2",
    "@stripe/react-stripe-js": "^2.4.0",
    "@stripe/stripe-js": "^2.2.0",
    "@ton/ton": "latest",
    "@tonconnect/sdk": "^2.1.3",
    "@tonconnect/ui-react": "^1.0.0-beta.9",
    "@types/node": "^20.10.5",
    "antd": "^5.14.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^3.3.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "firebase": "^10.8.0",
    "i18next": "^23.7.16",
    "lucide-react": "^0.344.0",
    "nodemon": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.0",
    "react-router-dom": "^6.22.1",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "stripe": "^14.10.0",
    "tailwind-merge": "^2.5.5",
    "ts-node": "^10.9.2",
    "firebase-admin": "^12.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@babel/plugin-transform-react-jsx": "^7.23.4",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.27",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.3",
    "terser": "^5.24.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.2",
    "ts-node": "^10.9.2",
    "vite": "^5.0.0",
    "csv-parse": "^5.5.3",
    "csv-stringify": "^6.4.5"
  }
}
