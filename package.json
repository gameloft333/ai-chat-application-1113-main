{
  "name": "companion",
  "private": true,
  "version": "1.36.133.33203",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:test": "vite --mode test",
    "dev:prod": "vite --mode production",
    "dev:server": "nodemon server/index.js",
    "dev:ton": "nodemon --exec ts-node-esm ton-payment/index.ts",
    
    "build": "tsc && vite build",
    "build:test": "vite build --mode test",
    "build:prod": "vite build --mode production",
    "clean": "rimraf dist",
    
    "preview": "vite preview --host --port 4173",
    "preview:test": "vite preview --mode test",
    "preview:prod": "vite preview --mode production",
    
    "server:test": "cross-env NODE_ENV=test node server/index.js",
    "server:prod": "cross-env NODE_ENV=production node server/index.js",
    
    "ton:server:test": "cross-env NODE_ENV=test cross-env NODE_OPTIONS=\"--loader ts-node/esm\" ts-node ton-payment/index.ts",
    "ton:server:prod": "cross-env NODE_ENV=production node --experimental-specifier-resolution=node --loader ts-node/esm ton-payment/index.ts",
    
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "update-version": "node scripts/update-version.js",
    "version:major": "node scripts/update-version.js major",
    "version:minor": "node scripts/update-version.js minor",
    "version:patch": "node scripts/update-version.js patch",
    "commit": "scripts/run-commit.bat"
  },
  "dependencies": {
    "@firebase/auth": "^1.6.0",
    "@firebase/firestore": "^4.4.2",
    "@stripe/react-stripe-js": "^2.4.0",
    "@stripe/stripe-js": "^2.2.0",
    "@ton/ton": "^15.1.0",
    "@tonconnect/sdk": "^2.1.3",
    "@tonconnect/ui-react": "^1.0.0-beta.9",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase": "^10.8.0",
    "i18next": "^23.7.16",
    "lucide-react": "^0.344.0",
    "nodemon": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.0",
    "react-router-dom": "^6.22.1",
    "stripe": "^14.10.0",
    "tailwind-merge": "^2.5.5",
    "cross-env": "^7.0.3",
    "@types/node": "^20.8.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.27",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}
